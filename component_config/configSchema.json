{
  "type": "object",
  "title": "Lance Embedder",
  "required": [
    "embedColumn",
    "#apiKey",
    "model",
    "chunkingEnabled"
  ],
  "properties": {
    "model": {
      "enum": [
        "small_03",
        "large_03",
        "ada_002"
      ],
      "type": "string",
      "title": "Embedding model",
      "default": "small_03",
      "options": {
        "enum_titles": [
          "text-embedding-3-small",
          "text-embedding-3-large",
          "text-embedding-ada-002"
        ]
      },
      "propertyOrder": 2
    },
    "#apiKey": {
      "type": "string",
      "title": "OpenAI API Key",
      "format": "password",
      "default": "",
      "minLength": 1,
      "description": "API Key for embedding model",
      "propertyOrder": 1
    },
    "outputFormat": {
      "enum": [
        "csv",
        "lance"
      ],
      "type": "string",
      "title": "Output Format",
      "default": "csv",
      "options": {
        "enum_titles": [
          "CSV",
          "Lance"
        ]
      },
      "description": "Choose the output format for the embeddings",
      "propertyOrder": 3
    },
    "chunkingEnabled": {
      "type": "boolean",
      "title": "Enable Chunking",
      "default": false,
      "description": "Enable chunking of input data for embedding.",
      "propertyOrder": 4
    },
    "chunkSize": {
      "type": "integer",
      "title": "Chunk Size",
      "minimum": 1,
      "description": "Number of rows to process in a single chunk when chunking is enabled.",
      "propertyOrder": 5
    }
  }
}
