{
  "type": "object",
  "title": "OpenAI Embedding",
  "required": [
    "embedColumn",
    "#apiKey",
    "model",
    "provider"
  ],
  "properties": {
    "provider": {
      "enum": [
        "openai",
        "azure"
      ],
      "type": "string",
      "title": "Provider",
      "default": "openai",
      "options": {
        "enum_titles": [
          "OpenAI",
          "Azure OpenAI"
        ]
      },
      "propertyOrder": 1
    },
    "model": {
      "enum": [
        "small_03",
        "large_03",
        "ada_002"
      ],
      "type": "string",
      "title": "Embedding model",
      "default": "small_03",
      "options": {
        "enum_titles": [
          "text-embedding-3-small",
          "text-embedding-3-large",
          "text-embedding-ada-002"
        ]
      },
      "propertyOrder": 2
    },
    "#apiKey": {
      "type": "string",
      "title": "API Key",
      "format": "password",
      "default": "",
      "minLength": 1,
      "description": "API Key for embedding model",
      "propertyOrder": 2
    },
    "outputFormat": {
      "enum": [
        "csv",
        "artifacts"
      ],
      "type": "string",
      "title": "Output Format",
      "default": "csv",
      "options": {
        "enum_titles": [
          "CSV",
          "Artifacts"
        ]
      },
      "description": "Choose the output format for the embeddings",
      "propertyOrder": 3
    },
    "azureEndpoint": {
      "type": "string",
      "title": "Azure Endpoint",
      "default": "",
      "minLength": 1,
      "description": "Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com)",
      "propertyOrder": 3,
      "condition": {
        "properties": {
          "provider": ["azure"]
        }
      }
    },
    "azureDeployment": {
      "type": "string",
      "title": "Azure Deployment Name",
      "default": "",
      "minLength": 1,
      "description": "Name of your Azure OpenAI embedding deployment",
      "propertyOrder": 4,
      "condition": {
        "properties": {
          "provider": ["azure"]
        }
      }
    }
  }
}